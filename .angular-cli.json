{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "kolenergo"
  },
  "apps": [
    {
      "name": "shared-lib",
      "root": "src/shared-lib",
      "outDir": "dist/shared-lib",
      "assets": [],
      "index": "../_common/index.html",
      "main": "api.ts",
      "polyfills": "../_common/polyfills.ts",
      "test": "../test.ts",
      "tsconfig": "../tsconfig.app.json",
      "testTsconfig": "../tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "styles.less"
      ],
      "scripts": [],
      "environmentSource": "../_common/environments/environment.ts",
      "environments": {
        "dev": "../_common/environments/environment.ts",
        "prod": "../_common/environments/environment.prod.ts"
      }
    },
    {
      "name": "portal-app",
      "root": "src/portal-app",
      "outDir": "dist/portal-app",
      "assets": [
        "assets",
        "favicon.ico"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "../_common/polyfills.ts",
      "test": "../test.ts",
      "tsconfig": "../tsconfig.app.json",
      "testTsconfig": "../tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "styles/styles.less",
        "../../node_modules/bootstrap/dist/css/bootstrap.css",
        "../../node_modules/font-awesome/css/font-awesome.min.css"
      ],
      "scripts": [],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    },
    {
      "name": "aho-requests-app",
      "root": "src/aho-requests-app",
      "outDir": "dist/aho-requests-app",
      "assets": [
        "assets",
        "favicon.ico"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "../_common/polyfills.ts",
      "test": "../test.ts",
      "tsconfig": "../tsconfig.app.json",
      "testTsconfig": "../tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "styles/styles.less",
        "../../node_modules/bootstrap/dist/css/bootstrap.css",
        "../../node_modules/font-awesome/css/font-awesome.min.css"
      ],
      "scripts": [],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "less",
    "component": {
      "spec": false
    },
    "directive": {
      "spec": false
    },
    "guard": {
      "spec": false
    },
    "module": {
      "spec": false
    },
    "pipe": {
      "spec": false
    },
    "service": {
      "spec": false
    }
  }
}
